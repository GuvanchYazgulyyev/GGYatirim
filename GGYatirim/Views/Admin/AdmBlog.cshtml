@model IEnumerable<GGYatirim.Models.Sinif.DbBlog>
@{
    ViewBag.Title = "AdmBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}









<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Bloglar
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                                <table class="table table-bordered">
                                    <tr>
                                        <th>Başlık</th>
                                        <th>E Posta</th>
                                        <th>Resim</th>
                                        <th>Kayıt Tarihi</th>

                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                    @foreach (var x in Model)
                                    {
                                        <tr>
                                            <td>@x.Baslik</td>
                                            <td>@x.EPosta</td>
                                            <td><img src="@x.Resim" width="90px;" /></td>
                                            <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MMM/yyyy")</td>
                                            <td><a href="~/Admin/AdmBlogSil/@x.BlogID" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.Baslik ')" class="btn btn-raised btn-danger btn-round"> Sil </a></td>
                                            <td><a href="~/Admin/AdmBlogGetr/@x.BlogID" class="btn btn-raised bg-orange btn-round">Düzenle</a></td>
                                        </tr>
                                    }
                                </table>
                                <a href="/Admin/AdmBlogEkle/" class="btn btn-raised btn-success btn-simple btn-round">Yeni Blog Ekle</a>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>