@using GGYatirim.Models.Sinif
@model List<DbiletisimForm>
@{
    ViewBag.Title = "AdmiletsmGMesaj";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Gelem Mesajlar
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                            <h4>Gelem Mesajlar</h4>
                            @using (Html.BeginForm("AdmiletsmGMesaj", "Admin", FormMethod.Post))
                            {
                                <div class="col-md-12" style="float:left">
                                    <div class="col-md-6">
                                        <input type="text" name="p" placeholder="Telefon No İle Arama Yap..." class="form-control" />

                                    </div>
                                    <div class="col-md-6">
                                        <input type="submit" class="btn btn-raised bg-indigo btn-round" value="Ara..." />

                                    </div>

                                </div>

                                @*@Html.TextBox("p")*@

                            }


                            <br />
                            <table class="table table-bordered">
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>E-Posta</th>
                                    <th>Tel</th>
                                    <th>Konu</th>
                                    <th>Mesaj</th>
                                    <th>Sil</th>
                                </tr>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.AdSoyad</td>
                                        <td>@x.EPosta</td>
                                        <td>@x.Tel</td>
                                        <td>@x.Konu</td>
                                        <td>@x.Mesaj</td>
                                        <td><a href="~/Admin/AdmMesjSil/@x.iletisimFormID" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.AdSoyad ')" class="btn btn-raised bg-danger btn-round"> Sil </a></td>
                                    </tr>
                                }
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</body>
</html>
