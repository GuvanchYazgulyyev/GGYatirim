@model GGYatirim.Models.Sinif.DbTemsilci
@{
    ViewBag.Title = "AdmTemsilciGetr";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Temsilciler
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                            <h4>Temsilci Sayfasını Güncelle</h4>

                            @using (Html.BeginForm("AdmTemsilciGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div id="div-boyut">
                                    <label><b>Ad Soyad</b></label>
                                    @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
                                </div>
                                <div>
                                    <label><b>Telefon</b></label>
                                    @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
                                </div>
                                <div>
                                    <label><b>E-Posta</b></label>
                                    @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control" })
                                </div>
                                <div>
                                    <label><b>Makam</b></label>
                                    @Html.TextBoxFor(x => x.Makam, new { @class = "form-control" })
                                </div>

                                <div>
                                    <label><b>Resim</b></label>
                                    <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
                                </div>


                                <div>
                                    <label><b>İnstagram</b></label>
                                    @Html.TextBoxFor(x => x.instagram, new { @class = "form-control" })
                                </div>

                                <div>
                                    <label><b>Facebook</b></label>
                                    @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control" })
                                </div>
                                <div>
                                    <label><b>Tweetter</b></label>
                                    @Html.TextBoxFor(x => x.Twetter, new { @class = "form-control" })
                                </div>

                                <div>
                                    <label><b>Web Site</b></label>
                                    @Html.TextBoxFor(x => x.WebSite, new { @class = "form-control" })
                                </div>


                                <div>
                                    @Html.HiddenFor(x => x.TemsilciID)
                                </div>
                                <div>
                                    <br />
                            
                                    <button class="btn btn-raised btn-info btn-simple btn-round">Değişiklikleri Kaydet</button>

                                </div>


                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
