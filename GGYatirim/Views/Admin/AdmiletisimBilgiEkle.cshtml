@model GGYatirim.Models.Sinif.DbiletisimBilgi
@{
    ViewBag.Title = "AdmiletisimBilgiEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        İletişim Bilgiler
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">
                            @using (Html.BeginForm("AdmiletisimBilgiEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                            <form class="form-group" method="post">
                                <br />
                                Sube
                                @Html.TextBoxFor(x => x.Sube, new { @class = "form-control" })
                                <br />
                                Adres
                                @Html.TextAreaFor(x => x.Adres, new { @class = "form-control" })
                                <br />
                                Tel
                                @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
                                <br />
                                E Posta
                                @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
                                <br />
                                Harita
                                @Html.TextBoxFor(x => x.Harita, new { @class = "form-control" })
                                <br />
                                Facebook
                                @Html.TextBoxFor(x => x.Harita, new { @class = "form-control" })
                                <br />
                                Twetter
                                @Html.TextBoxFor(x => x.Twetter, new { @class = "form-control" })
                                <br />

                                İnstagram
                                @Html.TextBoxFor(x => x.instagram, new { @class = "form-control" })

                                <br />
                                @Html.HiddenFor(x => x.iletisimBilgiID)

                                <button class="btn btn-raised btn-success btn-simple btn-round">İletişim Bilgi Ekle</button>

                            </form>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
