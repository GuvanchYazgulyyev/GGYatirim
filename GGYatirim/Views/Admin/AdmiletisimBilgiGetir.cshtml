@model GGYatirim.Models.Sinif.DbiletisimBilgi
@{
    ViewBag.Title = "AdmiletisimBilgiGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        İletişim Bilgiler
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                            <h4>İletişim Sayfasını Güncelle</h4>

                            @using (Html.BeginForm("AdmiletisimBilgiGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div id="div-boyut">
                                    <label><b>Sube Konum</b></label>
                                    @Html.TextBoxFor(x => x.Sube, new { @class = "form-control" })
                                </div>
                                <div>
                                    <label><b>Adres</b></label>
                                    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })

                                </div>

                                <div>
                                    <label><b>Tel No</b></label>
                                    @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
                                </div>
                                <div>
                                    <label><b>E Posta</b></label>
                                    @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control" })
                                </div>

                                <div>
                                    <label><b>Harita</b></label>
                                    @Html.TextBoxFor(x => x.Harita, new { @class = "form-control" })
                                </div>

                                <div>
                                    <label><b>Facebook</b></label>
                                    @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control" })
                                </div>


                                <div>
                                    <label><b>Twetter</b></label>
                                    @Html.TextBoxFor(x => x.Twetter, new { @class = "form-control" })
                                </div>

                                <div>
                                    <label><b>İnstagram</b></label>
                                    @Html.TextBoxFor(x => x.instagram, new { @class = "form-control" })
                                </div>



                                <div>
                                    @Html.HiddenFor(x => x.iletisimBilgiID)
                                </div>
                                <div>
                                    <br />
                                    <button class="btn btn-raised btn-success btn-simple btn-round">Değişiklikleri Kaydet</button>

                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
