@model GGYatirim.Models.Sinif.DbBlog
@{
    ViewBag.Title = "AdmBlogGetr";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Bloglar
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                            <h3>Blog Sayfasını Güncelle</h3>

                            @using (Html.BeginForm("AdmBlogGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div id="div-boyut">
                                    <label><b>Başlık</b></label>
                                    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
                                </div>
                                <br />
                                <div>
                                    <label><b>İçerik 1</b></label>
                                    @Html.TextAreaFor(x => x.icerik1, 6, 6, new { @class = "form-control" })
                                </div>
                                <br />
                                <div>
                                    <label><b>İçerik 2</b></label>
                                    @Html.TextAreaFor(x => x.icerik2, 6, 6, new { @class = "form-control" })
                                </div>

                                <br />
                                <div>
                                    <label><b>İçerik 3</b></label>
                                    @Html.TextAreaFor(x => x.icerik3, 6, 6, new { @class = "form-control" })
                                </div>




                                <br />
                                <div>
                                    <label><b>E-Posta</b></label>
                                    @Html.TextBoxFor(x => x.EPosta, new { @class = "form-control" })
                                </div>

                                <br />
                                <div>
                                    <label><b>Resim</b></label>
                                    <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
                                </div>




                                <div>
                                    @Html.HiddenFor(x => x.BlogID)
                                </div>
                                <div>
                                    <br />
                                    <br />
                                    <button class="btn btn-raised bg-indigo btn-round">Değişiklikleri Kaydet</button>

                                </div>


                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

