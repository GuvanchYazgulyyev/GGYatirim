@using GGYatirim.Models.Sinif
@model List<DbKonum>
@{
    ViewBag.Title = "AdmKonum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                     Yeni Konum (Şehir)
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">
                            <h4>Yeni Şehir Ekle</h4>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Şehir Ad</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.SehirAd</td>
                                        <td><a href="~/Admin/AdmKonumSil/@x.KonumID" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.SehirAd ')" class="btn btn-raised btn-warning btn-round"> Sil </a></td>
                                        <td><a href="~/Admin/AdmKonumGetir/@x.KonumID" class="btn btn-raised btn-info btn-round">Düzenle</a></td>
                                    </tr>
                                }
                            </table>
                            <a href="/Admin/AdmKonumEkle/" class="btn btn-raised btn-success btn-simple btn-round">Yeni Şehir Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

