@using GGYatirim.Models.Sinif
@model List<DbEmlakTipi>
@{
    ViewBag.Title = "AdmEmlakTipi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Emlak Tipi
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">
                            <h4>Emlak Tipini Belirt</h4>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Emlak Tipi (Ornk: Apartman)</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.EmlakTipAd</td>
                                        <td><a href="~/Admin/AdmEmlakTipiSil/@x.EmlakTipiID" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.EmlakTipAd ')" class="btn btn-raised btn-danger btn-simple btn-round"> Sil</a></td>
                                        <td><a href="~/Admin/AdmEmlakTipiGetir/@x.EmlakTipiID" class="btn btn-raised btn-info btn-simple btn-round">Düzenle</a></td>
                                    </tr>
                                }
                            </table>
                            <a href="/Admin/AdmEmlakTipiEkle/" class="btn btn-raised btn-success btn-simple btn-round">Yeni Emlak Tipi Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>