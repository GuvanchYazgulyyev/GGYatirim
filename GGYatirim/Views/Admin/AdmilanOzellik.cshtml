@using GGYatirim.Models.Sinif
@model List<DbilanOzellik>
@{
    ViewBag.Title = "AdmilanOzellik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!doctype html>
<html class="no-js " lang="en">

<body class="theme-blue">
    <!-- Main Content -->
    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        İlan Özellik Belirt
                        <small class="text-muted">Tekrar Hoş Geldiniz</small>
                    </h2>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">
                            <h3>İlan Özellik Belirt</h3>
                            <table class="table table-bordered">
                                <tr>
                                    <th>İlan Özellik (Ornk: Özellikli, Normal)</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.OzellikAd</td>
                                        <td><a href="~/Admin/AdmilanOzellikSil/@x.ilanOzellikID" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.OzellikAd ')" class="btn btn-raised btn-danger btn-round"> Sil </a></td>
                                        <td><a href="~/Admin/AdmilanOzellikGetir/@x.ilanOzellikID" class="btn btn-raised btn-info btn-round">Düzenle</a></td>
                                    </tr>
                                }
                            </table>
                            <a href="/Admin/AdmilanOzellikEkle/" class="btn btn-raised btn-success btn-simple btn-round">Yeni İlan Özellik Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>



