@using GGYatirim.Models.Sinif
@model List<DbilanOzellik> 
@{
    ViewBag.Title = "AdmilanOzellik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div style="width:50%" ; class="col-md-4 table table-hover">
    <h3>İlan Özellik Belirt</h3>
    <table class="table table-bordered">
        <tr>
            <th>İlan Özellik (Ornk: Garaj,Havuz)</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.OzellikAd</td>
                <td><a href="~/Admin/AdmilanOzellikSil/@x.ilanOzellikID" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.OzellikAd ')" class="btn btn-danger"> <i class="fas fa-trash"></i></a></td>
                <td><a href="~/Admin/AdmilanOzellikGetir/@x.ilanOzellikID" class="btn btn-info"><i class="fas fa-edit"></i></a></td>
            </tr>
        }
    </table>
    <a href="/Admin/AdmilanOzellikEkle/" class="btn btn-success">Yeni İlan Özellik Ekle</a>

</div>

