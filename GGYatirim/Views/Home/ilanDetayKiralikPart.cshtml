@model IEnumerable<GGYatirim.Models.Sinif.Dbilan>
@using GGYatirim.App_Code


@foreach (var k in Model)
{

    if (k.ilanDurumIDD == 2)
    {
        <div class="item">
            <img src="@k.VitrinResim" alt="property-image">
            <div class="info">
                <p href="#" class="name" style="font-size:large;">
                    @Html.ActionLink(k.EmlakTipi, "ilanDetay", new { id = k.ilanID, baslik1 = Seo.AdresDuzenle(k.EmlakTipi) })
                    <br />
                    İlan No:  @Html.ActionLink(k.ilanNo, "ilanDetay", new { id = k.ilanID, baslik1 = Seo.AdresDuzenle(k.EmlakTipi) })
                </p>
                @*<p href="#" class="name">
                    İlan No:  @Html.ActionLink(k.ilanNo, "ilanDetay", new { id = k.ilanID, baslik1 = Seo.AdresDuzenle(k.EmlakTipi) })

                </p>*@

                <div class="wrapper">
                    <div class="left-wrap" style="text-align:center;">
                        <span><span>Fiyat ₺</span>@k.TamFiyat</span>

                    </div>

                    <div class="left-wrap" style="text-align:center;">
                        <span><span>Tarih </span>@Convert.ToDateTime(k.Tarih).ToString("dd/MMM/yyyy")</span>
                    </div>

                </div>
            </div>
        </div>
    }
}

